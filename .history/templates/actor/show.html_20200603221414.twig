{% extends "base.html.twig" %}
{% block title %}Actors{% endblock %}
{% block body %}
    
    <h1>Actors : {{ actor.name }}</h1>
    {% for program in actor.programs %}
        <div>
            <a href="{{ path('program_show', { 'id' : program.id }) }}"><h2>{{ loop.index }} / {{ program.title }}</h2></a>
        </div>
    {% else %}
        <h3>Aucune série trouvée.</h3>
    {% endfor %}
    <div class="d-flex flex-row-reverse">
        <a href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
    </div>

{% endblock %}
{% block javascripts %}{% endblock %}