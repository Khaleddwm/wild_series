{% extends 'base.html.twig' %}

{% block title %}Program{% endblock %}

{% block body %}
    <h1>Program</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ program.id }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td><img class="poster col-3" src="{{ program.poster }}" /></td>
            </tr>
            <tr><th>Title</th>
                <td>{{ program.title }}</td>
                
            </tr>
            <tr>
                <th>Synopsis</th>
                <td>{{ program.synopsis }}</td>    
            </tr>
            <tr>
                <th>Year</th>
                <td>{{ program.year }}</td>
            </tr>
            <tr>
                <th>Country</th>
                <td>{{ program.country }}</td>
            </tr>
        </tbody>
    </table>
    <strong>Acteur :</strong>
        <ul>
        {% for actor in program.actors %}
            <li>{{ actor.name }} </li>
        {% else %}
            <li>Aucun acteur pour cette s√©rie</li>
        {% endfor %}
        </ul>

    <a href="{{ path('program_index') }}">back to list</a>

    <a href="{{ path('program_edit', {'id': program.id}) }}">edit</a>

    {{ include('program/_delete_form.html.twig') }}
{% endblock %}
