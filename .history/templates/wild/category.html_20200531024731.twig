{% extends 'base.html.twig' %}

{% block title %}Programs by Category{% endblock %}

{% block body %}

    <h1>Catégorie {{ category.name }}</h1>
    <a href="{{ path('app_category_add') }}"><p>Ajouter une catégorie =></p></a>
    {% for program in programs %}
        <div>
            <a href="{{ path('wild_show_program', { 'programTitle': program.title }) }}"><h2>{{ loop.index }} / {{ program.title }}</h2></a>
            <div class="d-flex">
                <img class="align-self-start mr-3 col-1" src="{{ program.poster }}" alt="{{ program.title }} poster">
                <p>{{ program.synopsis }}</p>
            </div>
        </div>
    {% else %}
        <h3>Aucune série trouvée.</h3>
    {% endfor %}
    <div class="d-flex flex-row-reverse">
        <a href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
    </div>

{% endblock %}