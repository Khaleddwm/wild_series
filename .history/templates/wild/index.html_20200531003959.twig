{% extends 'base.html.twig' %}
{% form_theme form 'foundation_5_layout.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    
    <h1>Toutes les séries de la table program : </h1>
    {% for program in programs %}
        <div>
            <a href="{{ path('wild_show_program', { 'programTitle': program.title }) }}">
            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
            </a>
            <div class="d-flex">
                <img class="align-self-start mr-3 col-1" src="{{ program.poster }}" alt="{{ program.title }} poster">
                <p>{{ program.synopsis }}</p>
            </div>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}
    {{ form_start(form) }}
    {{ form_row(form.searchField) }}
    <button type="submit" name="btnSearch">Rechercher</button>
    {{ form_end(form) }}
    <div class="d-flex flex-row-reverse">
        <a href="{{ path('app_index') }}">
            Retour à l'accueil
        </a>
    </div>

{% endblock %}
