{% extends 'base.html.twig' %}

{% block title %}Programs by title{% endblock %}

{% block body %}
    <h1>{{ program.title }}</h1>
    <img class="align-self-start mr-3 col-2" src="{{ program.poster }}" alt="{{ program.title }} poster">
    {% for season in seasons %}
        <div>
        <div style="display:flex">
            <h2>Saison : {{ season.number }}</h2>
            <h3>Année de production : {{ season.year }}</h3>
                
                <p>{{ season.description }}</p>
            </div>
        </div>
    {% else %}
        Aucune saison trouvée.
    {% endfor %}
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}